@{
    ViewBag.Title = "Blood Page";
}

<h3>@ViewBag.Message</h3>
<main id="ward-patient-data-content" class="container">
    <div data-bind="foreach: bloodData">
        <div class="row">
            <div class="col-sm-4">
                <section class="panel panel-info">
                    <div class="panel-heading">Patient's info</div>
                    <div class="panel-body">
                        <div class="row">
                            <label class="col-sm-2">Name:</label>
                            <span data-bind="text: PatientInfo.Name"></span>
                        </div>
                        <div class="row">
                            <label class="col-sm-2">Age:</label>
                            <span data-bind="text: PatientInfo.Age"></span>
                        </div>
                    </div>
                </section>

            </div>

            <div class="col-sm-8">
                <span data-bind="text: BloodComment.BloodExaminationComment"></span>
                <div class="row">
                    <div class="form-group">
                        <textarea id="examinationDescriptionInput" class="form-control" rows="4" cols="70"
                                  data-bind="value: examinationDescriptionBlood"></textarea>
                        <button data-bind="click: $root.sendToLab">Lab</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section scripts {
    @Scripts.Render("~/bundles/blood_index")
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->

    <script type="text/javascript">

        (function () {
            var urls = {
                content: '@Url.Content("~/content")',
                sendToLab: "@Url.RouteUrl("Default", new { httproute = "", controller = "Home", action = "SendToLab" })"
            };

            var bloodExaminationService = new BloodExaminationService(urls);

            var BloodViewModel = function () {
                var self = this;

                self.bloodData = ko.observableArray([]);

                self.sendToLab = function (item) {
                    bloodExaminationService.sendToLab(
                        {
                            PatientDieseaseId: item.PatientDieseaseId,
                            Comment: item.examinationDescriptionBlood()
                        },
                        function () {

                        });
                };
            };


            $(function () {

                var bloodViewModel = new BloodViewModel();
                var chat = $.connection.bloodHub;
                chat.client.addNewRequestToBlood = function (declaration) {
                    bloodViewModel.bloodData.push(new BloodExaminationViewModel(declaration))

                };
                $.connection.hub.start().done(function () {

                    ko.applyBindings(bloodViewModel, document.getElementById("ward-patient-data-content"));
                    $.data(document.body, "BloodViewModel", bloodViewModel);
                });

            });
        })();
    </script>
}
