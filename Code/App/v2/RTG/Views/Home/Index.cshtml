@{
    ViewBag.Title = "RTG Page";
}

<h3>@ViewBag.Message</h3>
<main id="ward-patient-data-content" class="container">
    <div data-bind="foreach: rtgData">
        <div class="row">
            <div class="col-sm-4">
                <section class="panel panel-info">
                    <div class="panel-heading">Patient's info</div>
                    <div class="panel-body">
                        <div class="row">
                            <label class="col-sm-2">Name:</label>
                            <span data-bind="text: PatientInfo.Name"></span>
                        </div>
                        <div class="row">
                            <label class="col-sm-2">Age:</label>
                            <span data-bind="text: PatientInfo.Age"></span>
                        </div>
                    </div>
                </section>

            </div>

            <div class="col-sm-8">
                <span data-bind="text: RTGComment.RTGExaminationComment"></span>
                <div class="row">
                    <div class="form-group">
                        <textarea id="examinationDescriptionInput" class="form-control" rows="4" cols="70"
                                  data-bind="value: examinationDescriptionRTG"></textarea>
                        <button data-bind="click: $root.sendResultsToWard">Ward</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section scripts {
    @Scripts.Render("~/bundles/rtg_index")
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->

    <script type="text/javascript">

        (function () {
            var urls = {
                content: '@Url.Content("~/content")',
                sendResultsToWard: "@Url.RouteUrl("Default", new { httproute = "", controller = "Home", action = "SendResultsToWard" })"
            };

            var rtgExaminationService = new RTGExaminationService(urls);

            var RTGViewModel = function () {
                var self = this;

                self.rtgData = ko.observableArray([]);

                self.sendResultsToWard = function (item) {
                    rtgExaminationService.sendResultsToWard(
                        {
                            PatientDieseaseId: item.PatientDieseaseId,
                            Comment: item.examinationDescriptionRTG()
                        },
                        function () {
                            item.examinationDescriptionRTG('');

                        });
                };
            };


            $(function () {

                var rtgViewModel = new RTGViewModel();
                var chat = $.connection.rTGHub;
                chat.client.addNewRequestToRTG = function (declaration) {
                    rtgViewModel.rtgData.push(new RTGExaminationViewModel(declaration))

                };
                $.connection.hub.start().done(function () {

                    ko.applyBindings(rtgViewModel, document.getElementById("ward-patient-data-content"));
                    $.data(document.body, "RTGViewModel", rtgViewModel);
                });

            });
        })();
    </script>
}
