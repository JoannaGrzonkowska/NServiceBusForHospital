@model Patient.Models.PatientRegisterModel
@{
    ViewBag.Title = "Register";
}
@using (Html.BeginForm())
{
    <div class="panel">
        <div class="panel-heading">
            <h3>Register</h3>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary(true, "Create user failed. Check your fields.")
            <div class="form-group">
                @Html.TextBoxFor(m => m.Name, new { @placeholder = "Your name, please" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @placeholder = "Your password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Age, new { @placeholder = "Your age" })
                @Html.ValidationMessageFor(m => m.Age)
            </div>
            <input type="submit" id="register-button" class="btn btn-primary " value="Create user" />
        </div>
    </div>
}