@model WebApplication1.Models.UserModel
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    <div class="panel">
        <div class="panel-heading">
            <h3>Login</h3>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary(true, "Login failed. Check your login details.")
            <div class="form-group">
                @Html.TextBoxFor(m => m.Name, new { @placeholder = "Your name, please" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @placeholder = "Your password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <input type="submit" id="login-button" class="btn btn-primary " value="Login" />
        </div>
    </div>
}


